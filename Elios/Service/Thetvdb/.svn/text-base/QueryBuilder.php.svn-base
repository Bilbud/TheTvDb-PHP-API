<?php

/**
 * Elios_Db_Vendor_Thetvdb_QueryBuilder
 */
class Elios_Db_Vendor_Thetvdb_QueryBuilder{
	public $select;
	public $from;
	public $where;
	protected $mirrortype;
	protected $adapter;
	public $apikey;
	
	/**
	 * 
	 * Enter description here ...
	 * @var unknown_type
	 */
	const APIKEY = 'APIKEY';
	
	/**
	 * 
	 * Enter description here ...
	 * @var unknown_type
	 */
	const XMLMASK = 1;
	
	/**
	 * 
	 * Enter description here ...
	 * @var unknown_type
	 */
	const BANNERMASK = 2;
	
	/**
	 * 
	 * Enter description here ...
	 * @var unknown_type
	 */
	const ZIPMASK = 4;
	
	/**
	 * 
	 * Enter description here ...
	 */
	function __construct() {
       $this->adapter = Elios_Db_Vendor_Thetvdb_Adapter::getInstance();
       $this->apikey = $this->adapter->getApiKey();
       $this->where = array();
       //@todo ne pas recuperer les mirroirs à chaque fois
       $this->adapter->setMirors();
       $this->mirrortype = self::XMLMASK;
    }
	
    /**
     * 
     * Enter description here ...
     * @param unknown_type $select
     */
	public function select($select){
		$this->select = $select;
	}
	
	/**
	 * 
	 * Enter description here ...
	 * @param unknown_type $from
	 * @param unknown_type $mask
	 */
	public function from($from,$mask = self::XMLMASK){
		$this->from = str_replace(self::APIKEY,$this->apikey,$from);
		$this->mirrortype = $mask;
	}
	
	/**
	 * 
	 * Enter description here ...
	 * @param unknown_type $where
	 */
	public function where($where){
		$this->where = $where;
	}
	
	/**
	 * 
	 * execute query in adapter
	 */
	public function execute(){
		return $this->adapter->executeQuery($this);
	}
	
	/**
	 * 
	 * Returns the query as string
	 */
	public function getQueryAsString(){
		$where = '';
		$i = 0;
		foreach($this->where as $k=>$w){
			if($i==0)
				$where ='?'.$k.'='.$w;
			else
				$where .='&'.$k.'='.$w;
			$i++;
		} 
		
		return $this->getAvaliableMirror().$this->from.$where;
	}
	
	/**
	 * 
	 * Enter description here ...
	 */
	public function getAvaliableMirror(){
		return $this->adapter->getAvaliableMirror($this->mirrortype);
	}
}